<view class="user_header">
  <view class="header_box">
    <image src="{{userTx || defaultUrl}}"></image>
    <button class="{{username == '点击登录' ? 'usernameDe' : 'username'}}" 
    open-type="getUserInfo" bindgetuserinfo="getUserInfoHandler">{{username}}</button>
    <view class="qiandao" bindtap="qiandao">
      <text>糖果</text>
    </view>
  </view>
</view>
<view class="user_main">
  <view class="main_box">
    <view class="box_item" bindtap="jilu" data-nth='1'>
      <image src="/images/jilu.png"></image>
      <text>点爆记录</text>
    </view>
    <view class="box_item" bindtap="jilu" data-nth='2'>
      <image src="/images/zhudian.png"></image>
      <text>最近助点</text>
    </view>
  </view>
  <view class="main_box">
    <view class="box_item" bindtap="myfengcun">
      <image src="/images/fengcun.png"></image>
      <text>我的封存</text>
    </view>
    <view class="box_item" bindtap="jilu" data-nth='3'>
      <image src="/images/usercang.png"></image>
      <text>我的收藏</text>
    </view>
  </view>
</view>