/* top */
.the_top{
  display: flex;
  padding: 40rpx 0 20rpx 0;
  margin: 0 30rpx 0 30rpx;
  border-bottom: 2rpx silver solid;
}
.the_top text{
  display: block;
  font-size: 28rpx;
  line-height: 50rpx;
  color: #434343;
}
.top_left{
  width: 160rpx;
}
.top_right{
  flex: 1;
}
/* mid */
.show{
  display: block;
}
.hide{
  display: none;
}
.the_mid{
  margin: 10rpx 30rpx;
}
.the_mid scroll-view{
  width: 100%;
  height: 600rpx;
  border: 2rpx silver solid;
}
.the_mid scroll-view view{
  padding: 12rpx;
}
.the_mid scroll-view view text{
  font-size: 28rpx;
}
.yuimage image{
  width: 170rpx;
  height: 170rpx;
  display: block;
  margin: 0 auto;
}
.the_mid .yuyin{
  width: 100%;
  height: 600rpx;
  border: 2rpx silver solid;
}
.yuyin .image1{
  display: block;
  width: 236rpx;
  height: 236rpx;
  margin: 60rpx auto;
}
.yuyin .image2{
  width: 170rpx;
  height: 170rpx;
  display: block;
  margin: 0 auto;
}
/* button */
.the_button{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 60rpx;
}
.the_button button{
  width: 560rpx;
  background-color: #FF6666;
  color: white;
  font-size: 32rpx;
  border: none;
  border-radius: 40rpx;
}
/* bottom */
.the_bottom{
  display: flex;
  padding: 0 60rpx;
  margin-bottom: 10rpx;
  position: absolute;
  bottom: 0;
  width: 100%;
}
.bottom_one{
  width: 60rpx;
}
.bottom_one>text{
  color: #FF0000;
  width: 60rpx;
  text-align: center;
  display: block;
}
.bottom_two{
  width: 60rpx;
  margin-left: 70%;
}
.bottom_two text{
  display: block;
  width: 60rpx;
  text-align: center;
  word-break: keep-all;
}
.bottom_three{
  width: 60rpx;
}
.the_bottom text{
  font-size: 24rpx;
  width: 60rpx;
  text-align: center;
}
.the_bottom image{
  display: block;
  width: 40rpx;
  height: 40rpx;
  margin: 0 auto;
}